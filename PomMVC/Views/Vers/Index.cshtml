@model IEnumerable<PomMVC.Models.Vers>

@{
    ViewBag.Title = "Versions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Versions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VersNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VersNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VersID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VersID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VersID })
        </td>
    </tr>
}

</table>
